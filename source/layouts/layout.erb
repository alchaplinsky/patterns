<!doctype html>
<html>
  <head>
    <meta charset="utf-8">

    <!-- Always force latest IE rendering engine or request Chrome Frame -->
    <meta content="IE=edge,chrome=1" http-equiv="X-UA-Compatible" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0, user-scalable=0, maximum-scale=1.0" />
    <!-- Use title if it's in the page YAML frontmatter -->
    <title><%= current_page.data.title || "The Middleman" %></title>
    <script src="//ajax.googleapis.com/ajax/libs/jquery/2.0.3/jquery.min.js"></script>
    <%= stylesheet_link_tag "application", "syntax" %>

    <%= javascript_include_tag  "all" %>
  </head>
  <body class="<%= page_classes %>">
    <header class="app-header">
      <div class="app-brand">
        <a href="https://github.com/alchapone/patterns" target="_blank" class="icon-github"></a>
        <a href="https://twitter.com/intent/tweet?source=webclient&text=Collection of Common Patterns of Markup and Style http://alchapone.github.io/patterns/" class="icon-twitter"></a>
        <a href="https://www.facebook.com/sharer/sharer.php?s=100&p[url]=http://alchapone.github.io/patterns/" class="icon-facebook"></a>
        <a href="#" class="icon-bars right" id="toggle"></a>
      </div>
      <div class="last-col">
        <a href="/">Common patterns of markup and style</a>
      </div>
    </header>
    <a href="https://github.com/alchapone/patterns">
      <img style="position:absolute;top:-5px;right:-5px;border:0;z-index:2;" src="https://camo.githubusercontent.com/652c5b9acfaddf3a9c326fa6bde407b87f7be0f4/68747470733a2f2f73332e616d617a6f6e6177732e636f6d2f6769746875622f726962626f6e732f666f726b6d655f72696768745f6f72616e67655f6666373630302e706e67" alt="Fork me on GitHub" data-canonical-src="https://s3.amazonaws.com/github/ribbons/forkme_right_orange_ff7600.png">
    </a>

    <section class="app-body">
      <aside class="app-sidebar">
        <div class="app-scroller">
          <h4 class="pam">CONTENTS</h4>
          <ul class="app-navigation">
            <li>
              <a href="#" class="icon-code"> Navigations</a>
              <ul>
                <li><%= link_to "Navigation", "/patterns/navigations/navigation.html" %></li>
                <li><%= link_to "Tabs", "/patterns/navigations/tabs.html" %></li>
                <li><%= link_to "Pagination", "/patterns/navigations/pagination.html" %></li>
              </ul>
            </li>
            <li>
              <a href="#" class="icon-code"> Form elements</a>
              <ul>
                <li><%= link_to "Input", "/patterns/forms/input.html" %></li>
                <li><%= link_to "Checkbox", "/patterns/forms/checkbox.html" %></li>
                <li><%= link_to "Radio", "/patterns/forms/radio.html" %></li>
                <li><%= link_to "Select", "/patterns/forms/select.html" %></li>
              </ul>
            </li>
            <li>
              <a href="#" class="icon-code"> Buttons</a>
              <ul>
                <li><%= link_to "Button", "/patterns/buttons/button.html" %></li>
              </ul>
            </li>
<!--             <li><a href="" class="icon-code"> Article</a></li>
            <li><a href="" class="icon-code"> Icons</a></li> -->
          </ul>
        </div>
      </aside>
      <div class="last-col">
        <div class="app-scroller">
          <section class="app-content">
            <%= yield %>
          </section>
        </div>
      </div>
    </section>
  </body>
</html>
